include nav.pug
main 
    h1 Favourites movies


            button(type="button" id="logOutBtn" onclick="logOut()") Log Out
        main 
            h1 Favourites movies

            if movies 
                each movie in movies
                    div.film__container
                        p.film__title #{movie.Title || movie.titulo}
                        img.film__img(src=`${movie.Poster || movie.imagen}`)
                        p.film__year #{movie.Year || movie.year}
                        p.film__director #{movie.Director || movie.director}
                        p.film__genre #{movie.Genre || movie.genero}
                        p.film__runtime #{movie.Runtime || movie.duracion}
                        input(class = "input__show", id = `${movie.Title || movie.titulo}`,type="button" value="Show details", name="showFilm" onclick="goToMovie(event)")
                        input.input__delete(type="button", id=`${movie.imdbID || movie._id}` onclick="removeFromFav(event)" value="Saved")

                        
script(src="/js/favourites.js")