doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Film Browser 
    body
        header 
            h1 Header 
        main
            section
                form(action="/search", method="POST")
                    input(type="text", name="filmBrowser", placeholder="Busca tu pel√≠cula")
                    input(type="submit", value="Search")

            section.films__section
                    if response
                        for film of response
                            div.films__container
                                p.film__title #{film.Title}
                                img.film__img(src=`${film.Poster}`)
                                p.film__year #{film.Year}
                                p.film__director #{film.Director}
                                p.film__genre #{film.Genre}
                                p.film__runtime #{film.Runtime}
                                input.input__show(type="button", value="Show details", name="showFilm", required)
                                input.input__save(type="button", value="Save as favourite<3")

        script(src="/js/searchView.js")