doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css")
        link(rel="stylesheet", href="../css/styles.css")
    body 
        header 
            nav(class = "navbar")
                a(href = "/admin", class = "nav__branding") THE MOVIES APP 
                ul(class = "nav__menu" id = "nav__menu__admin") 
                    li(class = "nav__item")
                        p(href = "#Cerrar sesión", class = "nav__link", onclick="logOut()") Cerrar Sesión
                            i(class = "bx bx-log-out")
                div(class = "hamburguer")
                    span.bar 
                    span.bar 
                    span.bar
        main
            p(id="add-button", onclick="goToAddMovie()")
                a(href="/admin") 
                    i(class='bx bx-arrow-back', id = "back__button")
            if success 
                p #{success.message}

            if movie
                form(action=`/editMovie/${movie.titulo}` method="POST") 
                    label(for="titulo") Title:
                    input(type="text" value=`${movie.titulo}` name="titulo")
                    
                    label(for="year") Year:
                    input(type="number" value=`${movie.year}` name="year")
                    
                    label(for="director") Director: 
                    input(type="text" value=`${movie.director}` name="director")
                    
                    label(for="genero") Genre:
                    input(type="text" value=`${movie.genero}` name="genero")
                    
                    label(for="duracion") Duration: 
                    input(type="text" value=`${movie.duracion}` name="duracion")    
                    
                    label(for="imagen") Image:
                    input(type="text", value=`${movie.imagen}` name="imagen")

                    input(type="submit" value="Save")


script(src='/js/admin_movies.js')
script(src="/js/burger.js")
