doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
        header 
            include ./nav.pug
        main
            if success 
                p #{success.message}
                a(href='http://localhost:3000/admin/movies')
                    button Back

            if movie
                h1 ¿Estás seguro que deseas eliminar esta pelicula?
                form(action=`/removeMovie/${movie.titulo}` method="POST") 
                    h2 Titulo: #{movie.titulo}
                    p Año: #{movie.year}
                    p Director: #{movie.director}
                    p Genero: #{movie.genero}
                    p Duracion: #{movie.duracion}
                    p Imagen: #{movie.imagen}

                    input(type="submit" value="Eliminar")